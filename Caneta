public class Caneta2 {
    public String modelo;
    private float ponta;
    private String cor;

    //Getter: Lê o valor de um atributo (obter).
    //Setter: Escreve/Modifica o valor de um atributo (definir).

    public Caneta2(String m, float p, String cor){
    //Nome do método construtor === nome da classe
        this.modelo = m;
        this.ponta = p;
        this.cor = cor;
    }

    public String getCor(){
        return this.cor;
    }

    public void setCor(String cor) {
        this.cor = cor;
    }

    public String getModelo() {
        return this.modelo;
    }

    public void setModelo(String m){
        this.modelo = m;
    }

    public float getPonta() {
        return this.ponta;
    }

    public void setPonta(float p){
        this.ponta = p;
    }

    public void status(){
        //System.out.println("SOBRE A CANETA:");
        //System.out.printf("Modelo: %s\n",this.getModelo());
        //System.out.printf("Ponta: %s\n",this.getPonta());

        System.out.printf("Tenho uma caneta da %s de cor %s com a ponta %s",this.getModelo(),this.getCor(),this.getPonta());

    }

}
